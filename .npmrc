# Enable package-lock.json generation
package-lock=true

# Ensure consistent dependency resolution
save-exact=true

# Use the same registry for all package managers
registry=https://registry.npmjs.org/

# Enable audit for security
audit=true

# Enable fund messages
fund=false

# Enable progress bar
progress=true

# Set engine strict mode
engine-strict=true

# pnpm configuration
auto-install-peers=true
strict-peer-dependencies=false
shamefully-hoist=false
